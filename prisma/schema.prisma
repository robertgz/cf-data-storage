generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agency {
  id          Int @default(autoincrement()) @id
  name        String
  software    String
  url         String @unique
  elections   Election[]

  // @@unique([software, url])
}

model Election {
  id        Int @default(autoincrement()) @id
  type      String
  date      String
  agency    Agency @relation(fields: [agencyId], references: [id])
  agencyId  Int

  @@unique([agencyId, date])
}
